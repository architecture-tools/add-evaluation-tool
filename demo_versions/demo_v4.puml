@startuml
skinparam componentStyle rectangle

package "Demo System" {
  interface "Frontend Interface" as Frontend
  [API Gateway] as ApiGateway
  [PlantUML Parser] as PUParser
  [Evaluation Engine] as Engine
  database "PostgreSQL" as Database
  [Redis Cache] as Cache
}

Frontend --> ApiGateway : REST
ApiGateway --> PUParser : parse .puml
PUParser --> Engine : build matrix
Engine --> Database : persist results
Frontend --> Engine : request analysis summary
ApiGateway --> Database : fetch history
Engine --> Cache : cache results
Cache --> Database : invalidate on update

@enduml

